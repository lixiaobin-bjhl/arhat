<style lang="sass">
     @import '../scss/color';
    .banner {
        height: 135px;
        text-align: center;
        color: #FFF;
        background-size: cover;
        background: url('http://otzuzbqja.bkt.clouddn.com/banner1.png') $brand;
        image {
            margin-top: 18px;
            width: 75px;
            height: 75px;
            border-radius: 50%;
        }
    }
    .my-menu {
        margin-top: 10px;
        background: #FFF;
        color: #555;
        .menu-item {
            height: 44px;
            line-height: 44px;
            padding: 0 10px;
            border-bottom: 1px solid map-get($borders, shallow);
            &:last-of-type {
                border-bottom: 0;
            }
        }
        .icon {
            background-repeat: none;
            background-size: contain;
        }
        .arrow-right {
            @extend .icon;
            float: right;
            width: 14px;
            height: 14px;
            margin-top: 15px;
            background-image: url('http://otzuzbqja.bkt.clouddn.com/arrow-right.svg');
        }
        .menu-sign {
            width: 20px;
            height: 20px;
            margin-top: 12px;
            margin-right: 5px;
            float: left;
            @extend .icon;
        }
        .order {
            background-image: url('http://otzuzbqja.bkt.clouddn.com/order.svg')
        }
        .card {
            background-image: url('http://otzuzbqja.bkt.clouddn.com/card2.svg')
        }
        .address {
            background-image: url('http://otzuzbqja.bkt.clouddn.com/address.svg')
        }
    }
</style>

<template>
    <view class="page">
        <view class="banner"> 
            <view><image src="{{userInfo.avatarUrl}}"></image></view> 
            <view>{{userInfo.nickName}}</view>
        </view>
        <view class="my-menu">
            <view class="menu-item clearfix" @tap="redirect('order')">
                <view class="menu-sign order"></view>
                <view class="arrow-right"></view>
                我的订单
            </view>
            <view class="menu-item clearfix" @tap="redirect('card')">
                <view class="menu-sign card"></view>
                <view class="arrow-right"></view>
                我的购物车
            </view>
            <view class="menu-item clearfix" @tap="redirect('shippingAddress')">
                <view class="menu-sign address"></view>
                <view class="arrow-right"></view>
                我的地址
            </view>
        </view> 
        <footer from="my"></footer>
    </view>
</template>

<script>

    import wepy from 'wepy'
    import footer from '../components/footer'
    import { getUserInfo } from '../service/global'
    
    export default class My  extends wepy.page {

        config = {
            navigationBarTitleText: '我的' 
        }

        data = {
           userInfo: {}
        }

        components = {
            footer
        }

        onShow () {
            this.$invoke('footer', 'getCountByOpendId');
        }
        /**
         * 获取用户信息 
         */
        fetchUserInfo =  () => {
            getUserInfo()
                .then((res)=> {
                    this.userInfo = res;
                    this.$apply();
                });
        }

        methods = {
            /**
             * 跳转地址 
             */
            redirect (url) {
                wx.redirectTo({
                    url: url
                });
            }
        }
        
        onLoad (p) {
            this.fetchUserInfo();
        }
    }
</script>