/**
 * @file global mixin
 * @author XiaoBin Li(lixiaobin8878@gmail.com) 
 */
.icon-bg {
  background-repeat: no-repeat;
  background-size: contain; }

.middle {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.mc {
  display: flex;
  justify-content: center;
  align-items: center; }

.plain-btn, .add-to-card .btn-group .submit {
  border-radius: 0;
  background: #ff3333;
  border: 0;
  font-size: 14px;
  color: #FFF; }
  .plain-btn:after, .add-to-card .btn-group .submit:after {
    content: '';
    border: 0; }

.swiper-item image {
  margin: 0 auto; }

.commodity-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff; }

.commodity-attr-box {
  width: 100%;
  min-height: 150px;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  font-size: 14px; }

.content {
  position: relative;
  top: -30px;
  padding-left: 10px;
  padding-bottom: 25px; }

.add-to-card .c {
  padding: 5px 0;
  border-bottom: 1px solid #eaeaea; }
  .add-to-card .c:last-of-type {
    border-bottom: 0; }

.add-to-card .info {
  position: relative; }
  .add-to-card .info:before, .add-to-card .info:after {
    content: " ";
    display: table; }
  .add-to-card .info:after {
    clear: both; }
  .add-to-card .info .title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap; }
  .add-to-card .info .close {
    position: absolute;
    right: 10px;
    top: 35px; }
  .add-to-card .info .price {
    color: #ff3333; }
  .add-to-card .info .image {
    width: 64px;
    height: 64px;
    float: left; }
    .add-to-card .info .image image {
      border-radius: 3px;
      width: 60px;
      height: 60px;
      border: 1px solid #eaeaea;
      padding: 1px;
      background: #f2f2f2; }
  .add-to-card .info .desc {
    margin: 38px 30px 0 70px;
    overflow: hidden; }
  .add-to-card .info .value {
    border: 1px solid #eaeaea;
    padding: 6px 9px; }

.add-to-card .btn-group {
  width: 100%;
  position: absolute;
  bottom: 0;
  color: #FFF;
  display: flex; }
  .add-to-card .btn-group .submit {
    flex: 1; }
  .add-to-card .btn-group .btn-pay {
    background-color: #ff9933; }
