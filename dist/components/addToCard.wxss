.icon-bg {
  background-repeat: no-repeat;
  background-size: contain; }

.middle {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.mc {
  display: flex;
  justify-content: center;
  align-items: center; }

.commodity-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff; }

.commodity-attr-box {
  width: 100%;
  height: 200px;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  font-size: 14px; }

.content {
  position: relative;
  top: -30px; }

.add-to-card .title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; }

.add-to-card .c {
  padding: 0 10px;
  border-bottom: 1px solid #eaeaea; }

.add-to-card .info:before, .add-to-card .info:after {
  content: " ";
  display: table; }

.add-to-card .info:after {
  clear: both; }

.add-to-card .info .image {
  float: left;
  width: 64px;
  height: 64px; }
  .add-to-card .info .image image {
    border-radius: 3px;
    width: 60px;
    height: 60px;
    border: 1px solid #eaeaea;
    padding: 1px;
    background: #f2f2f2; }

.add-to-card .info .desc {
  margin-left: 84px;
  overflow: hidden; }

.add-to-card .submit {
  width: 100%;
  border-radius: 0;
  background: #ff3333;
  color: #FFF; }
