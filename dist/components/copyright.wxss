/**
 * @file global mixin
 * @author XiaoBin Li(lixiaobin8878@gmail.com) 
 */
.icon-bg, .copyright .icon {
  background-repeat: no-repeat;
  background-size: contain; }

.middle, .copyright .icon {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.mc {
  display: flex;
  justify-content: center;
  align-items: center; }

.plain-btn {
  border-radius: 0;
  background: #ff3333;
  border: 0;
  font-size: 14px;
  color: #FFF; }
  .plain-btn:after {
    content: '';
    border: 0; }

.copyright {
  text-align: center;
  color: #cecece;
  margin: 20px 0;
  font-family: titillium; }
  .copyright .icon {
    width: 18px;
    height: 18px;
    background-image: url("http://otzuzbqja.bkt.clouddn.com/moon.svg"); }
  .copyright .t {
    font-size: 12px; }
