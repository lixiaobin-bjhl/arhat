/**
 * @file global mixin
 * @author XiaoBin Li(lixiaobin8878@gmail.com) 
 */
.icon-bg, .empty, .product-item .trash {
  background-repeat: no-repeat;
  background-size: contain; }

.middle, .product-item .trash {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.mc, .product-item .checkbox {
  display: flex;
  justify-content: center;
  align-items: center; }

.plain-btn {
  border-radius: 0;
  background: #ff3333;
  border: 0;
  font-size: 14px;
  color: #FFF; }
  .plain-btn:after {
    content: '';
    border: 0; }

page {
  background: #f2f2f2;
  color: #333;
  font-size: 14px;
  padding-bottom: 110rpx;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px; }
  page .none-list {
    color: #999;
    padding: 50rpx;
    text-align: center; }

.clearfix:before, .clearfix:after {
  content: " ";
  display: table; }

.clearfix:after {
  clear: both; }

.pull-left {
  float: left; }

.pull-right {
  float: right; }

.tags {
  border-bottom: 1px solid #eaeaea;
  margin-left: 15px;
  padding: 10px 0; }
  .tags > view {
    display: inline-block;
    margin: 0 5px;
    padding: 0 3px;
    color: #ff3333;
    line-height: 18px;
    border-radius: 3px;
    font-size: 12px;
    border: 1px solid #ff3333; }

.empty {
  margin: 0 auto;
  background-image: url("http://otzuzbqja.bkt.clouddn.com/empty.svg");
  width: 100px;
  height: 100px; }

.money {
  color: #ff3333; }

checkbox {
  transform: scale(0.8); }

.product-item {
  background: #FFF;
  padding: 10px;
  font-size: 14px;
  border-bottom: 1px solid #eaeaea; }
  .product-item:before, .product-item:after {
    content: " ";
    display: table; }
  .product-item:after {
    clear: both; }
  .product-item .title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap; }
  .product-item .weui-media-box__hd_in-appmsg {
    width: 65px;
    height: 65px; }
  .product-item .product {
    overflow: hidden;
    padding-right: 10px; }
  .product-item .specifications {
    font-size: 14px; }
    .product-item .specifications view {
      display: inline-block;
      color: #666; }
  .product-item .trash {
    width: 16px;
    height: 16px;
    float: right;
    margin: 4px 0 0 4px;
    background-image: url("http://otzuzbqja.bkt.clouddn.com/trash2.svg"); }
  .product-item .info:before, .product-item .info:after {
    content: " ";
    display: table; }
  .product-item .info:after {
    clear: both; }
  .product-item .info .price {
    float: left;
    color: #ff3333; }
  .product-item .info .count {
    float: right;
    color: #999; }
  .product-item:first-of-type {
    border-top: 1px solid #eaeaea; }
  .product-item .checkbox {
    float: left;
    height: 60px; }
  .product-item .product-image {
    float: left; }

.weui-form-preview__bd {
  background: #FFF; }

.empty-notice {
  text-align: center;
  color: #999;
  font-size: 14px; }
  .empty-notice .base {
    color: #333;
    font-size: 16px; }
