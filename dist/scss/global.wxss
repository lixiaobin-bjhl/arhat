.icon-bg, .empty {
  background-repeat: none;
  background-size: contain; }

.middle {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

page {
  background: #f2f2f2;
  padding-bottom: 110rpx;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px; }
  page .none-list {
    color: #999;
    padding: 50rpx;
    text-align: center; }

.clearfix:before, .clearfix:after {
  content: " ";
  display: table; }

.clearfix:after {
  clear: both; }

.empty {
  margin: 0 auto;
  background-image: url("http://otzuzbqja.bkt.clouddn.com/empty.svg");
  width: 100px;
  height: 100px; }
