.icon-bg, .empty {
  background-repeat: no-repeat;
  background-size: contain; }

.middle {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.mc {
  display: flex;
  justify-content: center;
  align-items: center; }

.plain-btn {
  border-radius: 0;
  background: #ff3333;
  border: 0;
  font-size: 14px;
  color: #FFF; }
  .plain-btn:after {
    content: '';
    border: 0; }

page {
  background: #f2f2f2;
  color: #333;
  padding-bottom: 110rpx;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px; }
  page .none-list {
    color: #999;
    padding: 50rpx;
    text-align: center; }

.clearfix:before, .clearfix:after {
  content: " ";
  display: table; }

.clearfix:after {
  clear: both; }

.empty {
  margin: 0 auto;
  background-image: url("http://otzuzbqja.bkt.clouddn.com/empty.svg");
  width: 100px;
  height: 100px; }

checkbox {
  transform: scale(0.8); }
