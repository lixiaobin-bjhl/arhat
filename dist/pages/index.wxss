/**
 * @file global mixin
 * @author XiaoBin Li(lixiaobin8878@gmail.com) 
 */
.icon-bg, .index .item .product .btn {
  background-repeat: no-repeat;
  background-size: contain; }

.middle, .index .item .product .btn {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.mc {
  display: flex;
  justify-content: center;
  align-items: center; }

.plain-btn {
  border-radius: 0;
  background: #ff3333;
  border: 0;
  font-size: 14px;
  color: #FFF; }
  .plain-btn:after {
    content: '';
    border: 0; }

.swiper-item image {
  margin: 0 auto; }

.banner {
  height: 500px;
  width: 100%; }

.banner image {
  height: 100%;
  width: 100%; }

.index .product-subject {
  border-top: 1px solid #eaeaea;
  background: #FFF;
  display: flex; }
  .index .product-subject view {
    flex: 1;
    text-align: center;
    padding: 10px 0;
    border-bottom: 1px solid #eaeaea; }
    .index .product-subject view.active {
      color: #1296db;
      border-bottom: 1px solid #1296db; }

.index .item {
  background: #FFF;
  padding: 10px 10px 1px 10px;
  border-bottom: 1px solid #eaeaea; }
  .index .item:before, .index .item:after {
    content: " ";
    display: table; }
  .index .item:after {
    clear: both; }
  .index .item .product-picture {
    width: 80px;
    height: 80px;
    float: left;
    margin-right: 10px; }
  .index .item .product {
    overflow: hidden; }
    .index .item .product .title {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap; }
    .index .item .product .specifications {
      font-size: 14px; }
      .index .item .product .specifications view {
        display: inline-block;
        color: #666; }
    .index .item .product .btn {
      width: 35px;
      height: 35px;
      display: inline-block; }
      .index .item .product .btn.btn-card {
        background-image: url("http://otzuzbqja.bkt.clouddn.com/card-circle.svg"); }
      .index .item .product .btn.btn-pay {
        width: 30px;
        height: 30px;
        position: relative;
        top: -4px;
        background-image: url("http://otzuzbqja.bkt.clouddn.com/card-purchase.svg"); }
    .index .item .product .btns {
      float: right; }
    .index .item .product .btn-group {
      color: #ff3333;
      margin-top: 10px; }
      .index .item .product .btn-group:before, .index .item .product .btn-group:after {
        content: " ";
        display: table; }
      .index .item .product .btn-group:after {
        clear: both; }
      .index .item .product .btn-group .money {
        float: left; }
      .index .item .product .btn-group .btns {
        float: right; }
