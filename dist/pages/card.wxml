
    <view class="page card-list">
        <block  wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="item._id">
            <view bindtap="select" class="card {{item.selected ? 'selected': ''}}" data-wepy-params-a="{{item}}" data-wepy-params-b="{{index}}">
                <view>{{item.product.title}}</view>
                <view>{{item.product.priceStr}}</view>
                <view style="font-size: 12px;color: #3399ff;" catchtap="remove" data-wepy-params-a="{{item}}">从购物车中移出</view>
            </view>
        </block>
        <view>应付金额: {{totalMoney}}</view>
        <view bindtap="pay" style="font-size: 12px;color: #3399ff;">结算</view>
        
    <view>
        <view style="margin: 10px;"><navigator style="font-size: 12px;color: #3399ff;" url="card">购物车<view  wx:if="{{$footer$cardCount > 0}}">({{$footer$cardCount}})</view></navigator></view>
        <view style="margin: 10px;"><navigator style="font-size: 12px;color: #3399ff;" url="shippingAddress">我的地址</navigator></view>
        <view class="weui-footer">
            <view class="weui-footer__text">Copyright © 2017 arhat0.0.1</view>
        </view>
    </view>

    </view>