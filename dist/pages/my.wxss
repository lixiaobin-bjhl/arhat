.icon-bg, .my-menu .arrow-right, .my-menu .menu-sign {
  background-repeat: none;
  background-size: contain; }

.middle {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.banner {
  height: 135px;
  text-align: center;
  color: #FFF;
  background-size: cover;
  background: url("http://otzuzbqja.bkt.clouddn.com/banner1.png") #1296db; }
  .banner image {
    margin-top: 18px;
    width: 75px;
    height: 75px;
    border-radius: 50%; }

.my-menu {
  margin-top: 10px;
  background: #FFF;
  color: #555; }
  .my-menu .menu-item {
    height: 44px;
    line-height: 44px;
    padding: 0 10px;
    border-bottom: 1px solid #eaeaea; }
    .my-menu .menu-item:last-of-type {
      border-bottom: 0; }
  .my-menu .arrow-right {
    float: right;
    width: 14px;
    height: 14px;
    margin-top: 15px;
    background-image: url("http://otzuzbqja.bkt.clouddn.com/arrow-right.svg"); }
  .my-menu .menu-sign {
    width: 20px;
    height: 20px;
    margin-top: 12px;
    margin-right: 5px;
    float: left; }
  .my-menu .order {
    background-image: url("http://otzuzbqja.bkt.clouddn.com/order2.svg"); }
  .my-menu .card {
    background-image: url("http://otzuzbqja.bkt.clouddn.com/card3.svg"); }
  .my-menu .address {
    background-image: url("http://otzuzbqja.bkt.clouddn.com/address2.svg"); }
