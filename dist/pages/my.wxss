/**
 * @file global mixin
 * @author XiaoBin Li(lixiaobin8878@gmail.com) 
 */
.icon-bg, .my-menu .arrow-right, .my-menu .menu-sign view {
  background-repeat: no-repeat;
  background-size: contain; }

.middle {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.mc, .my-menu .menu-sign {
  display: flex;
  justify-content: center;
  align-items: center; }

.plain-btn {
  border-radius: 0;
  background: #ff3333;
  border: 0;
  font-size: 14px;
  color: #FFF; }
  .plain-btn:after {
    content: '';
    border: 0; }

.banner {
  height: 135px;
  text-align: center;
  color: #FFF;
  background-size: cover;
  background: url("http://otzuzbqja.bkt.clouddn.com/banner1.png") #1296db; }
  .banner image {
    margin-top: 18px;
    width: 75px;
    height: 75px;
    border-radius: 50%; }

.my-menu {
  margin-top: 10px;
  background: #FFF;
  color: #555; }
  .my-menu .menu-item {
    height: 48px;
    line-height: 48px;
    padding: 0 10px;
    margin-left: 10px;
    border-bottom: 1px solid #eaeaea; }
    .my-menu .menu-item:last-of-type {
      border-bottom: 0; }
  .my-menu .arrow-right {
    float: right;
    width: 14px;
    height: 14px;
    margin-top: 17px;
    background-image: url("http://otzuzbqja.bkt.clouddn.com/arrow-right.svg"); }
  .my-menu .menu-sign {
    margin-top: 14px;
    margin-right: 5px;
    float: left;
    width: 20px;
    height: 20px;
    border-radius: 2px; }
    .my-menu .menu-sign view {
      width: 18px;
      height: 18px; }
  .my-menu .menu-sign1 {
    background: #ff9900; }
  .my-menu .menu-sign2 {
    background: #ffcc33; }
  .my-menu .menu-sign3 {
    background: #ff6666; }
  .my-menu .order {
    background-image: url("http://otzuzbqja.bkt.clouddn.com/order3.svg"); }
  .my-menu .card {
    background-image: url("http://otzuzbqja.bkt.clouddn.com/card4.svg"); }
  .my-menu .address {
    background-image: url("http://otzuzbqja.bkt.clouddn.com/address3.svg"); }
