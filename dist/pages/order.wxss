.fmenu {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  height: 108rpx;
  background: #FFF;
  width: 100%;
  position: fixed;
  border-top: 1rpx solid #eaeaea;
  bottom: 0; }
  .fmenu .menu-item {
    flex: 1;
    text-align: center;
    font-size: 30rpx; }
    .fmenu .menu-item .red-point {
      position: absolute;
      top: -5px;
      right: -13px;
      color: #FFF;
      width: 16px;
      line-height: 16px;
      border-radius: 50%;
      font-size: 12px;
      height: 16px;
      background: #FF3333; }
    .fmenu .menu-item .icon {
      width: 45rpx;
      height: 45rpx;
      margin: 5px auto 3px auto; }
    .fmenu .menu-item .home {
      background-image: url("http://otzuzbqja.bkt.clouddn.com/home1.svg"); }
    .fmenu .menu-item .card {
      position: relative;
      background-image: url("http://otzuzbqja.bkt.clouddn.com/card1.svg"); }
    .fmenu .menu-item .my {
      background-image: url("http://otzuzbqja.bkt.clouddn.com/my1.svg"); }
    .fmenu .menu-item.active {
      color: #1296db; }
      .fmenu .menu-item.active .home {
        background-image: url("http://otzuzbqja.bkt.clouddn.com/home-active1.svg"); }
      .fmenu .menu-item.active .card {
        background-image: url("http://otzuzbqja.bkt.clouddn.com/card-active1.svg"); }
      .fmenu .menu-item.active .my {
        background-image: url("http://otzuzbqja.bkt.clouddn.com/my-active2.svg"); }

.order .order-item {
  background: #FFF;
  padding-top: 10px;
  border-bottom: 1rpx solid #eaeaea;
  border-top: 1rpx solid #eaeaea;
  margin-bottom: 10px; }

.order .total-info {
  color: #666;
  padding: 10px; }
  .order .total-info:before, .order .total-info:after {
    content: " ";
    display: table; }
  .order .total-info:after {
    clear: both; }

.order .pull-left view {
  margin-right: 3px; }

.order .order-number {
  color: #999;
  padding: 0 10px; }

.order .btn-pay {
  padding: 1px 2px;
  background: transparent;
  border: 1px solid #FF3333;
  border-radius: 3px;
  color: #FF3333; }
