@import "./../components/footer.wxss";
@charset "UTF-8";
/**
 * @file 全站颜色配置
 * @author XiaoBin Li(lixiaobin8878@gmail.com) 
 */
/**
 * @file global mixin
 * @author XiaoBin Li(lixiaobin8878@gmail.com) 
 */
.icon-bg, .card-list .item .btn-group .trash {
  background-repeat: no-repeat;
  background-size: contain; }

.middle, .pay-wrap label, .pay-wrap .btn-group .pay-money, .pay-wrap .btn-group .money, .pay-wrap .btn-group button {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.mc, .card-list .item .checkbox {
  display: flex;
  justify-content: center;
  align-items: center; }

.plain-btn {
  border-radius: 0;
  background: #ff3333;
  border: 0;
  font-size: 14px;
  color: #FFF; }
  .plain-btn:after {
    content: '';
    border: 0; }

.empty-notice {
  text-align: center;
  color: #999;
  font-size: 14px; }
  .empty-notice .base {
    color: #333;
    font-size: 16px; }

.card-list {
  padding-bottom: 104rpx; }
  .card-list .item {
    background: #FFF;
    padding: 10px 0;
    font-size: 14px;
    border-bottom: 1px solid #eaeaea; }
    .card-list .item:before, .card-list .item:after {
      content: " ";
      display: table; }
    .card-list .item:after {
      clear: both; }
    .card-list .item .title {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap; }
    .card-list .item .product {
      overflow: hidden;
      padding-right: 10px; }
    .card-list .item .btn-group:before, .card-list .item .btn-group:after {
      content: " ";
      display: table; }
    .card-list .item .btn-group:after {
      clear: both; }
    .card-list .item .btn-group .trash {
      float: right;
      width: 16px;
      height: 16px;
      background-image: url("http://otzuzbqja.bkt.clouddn.com/trash2.svg"); }
    .card-list .item .info:before, .card-list .item .info:after {
      content: " ";
      display: table; }
    .card-list .item .info:after {
      clear: both; }
    .card-list .item .info .price {
      float: left;
      color: #ff3333; }
    .card-list .item .info .count {
      float: right;
      color: #999; }
    .card-list .item:first-of-type {
      border-top: 1px solid #eaeaea; }
    .card-list .item .checkbox {
      float: left;
      height: 60px; }
    .card-list .item .product-image {
      float: left; }

.surfing {
  width: 308rpx;
  height: 82rpx;
  line-height: 82rpx;
  border: 1px solid #ff9933;
  color: #ff9933;
  margin-top: 20px; }

.pay-wrap {
  position: fixed;
  bottom: 104rpx;
  height: 104rpx;
  background: #FFF;
  width: 100%;
  border-top: 1rpx solid #eaeaea; }
  .pay-wrap label {
    float: left;
    font-size: 14px;
    margin: 10px 0 0 10px; }
  .pay-wrap .btn-group {
    float: right; }
    .pay-wrap .btn-group view {
      vertical-align: middle; }
    .pay-wrap .btn-group .pay-money {
      margin-right: 5px;
      font-size: 12px; }
    .pay-wrap .btn-group .money {
      color: #ff3333; }
    .pay-wrap .btn-group button {
      height: 104rpx;
      width: 222rpx;
      border-radius: 0;
      background: #ff3333;
      color: #FFF; }
