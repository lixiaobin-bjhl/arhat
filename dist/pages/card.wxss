.icon-bg {
  background-repeat: no-repeat;
  background-size: contain; }

.middle, .pay-wrap label, .pay-wrap .btn-group .pay-money, .pay-wrap .btn-group .money, .pay-wrap .btn-group button {
  display: inline-block;
  vertical-align: middle; }

.right {
  text-align: right; }

.gray-light {
  color: #999; }

.mc {
  display: flex;
  justify-content: center;
  align-items: center; }

.plain-btn {
  border-radius: 0;
  background: #ff3333;
  border: 0;
  font-size: 14px;
  color: #FFF; }
  .plain-btn:after {
    content: '';
    border: 0; }

.card-list {
  padding-bottom: 104rpx; }
  .card-list .product-item {
    padding: 10px 0; }

.pay-wrap {
  position: fixed;
  bottom: 104rpx;
  height: 104rpx;
  background: #FFF;
  width: 100%;
  border-top: 1rpx solid #eaeaea; }
  .pay-wrap label {
    float: left;
    font-size: 14px;
    margin: 10px 0 0 10px; }
  .pay-wrap .btn-group {
    float: right; }
    .pay-wrap .btn-group view {
      vertical-align: middle; }
    .pay-wrap .btn-group .pay-money {
      margin-right: 5px;
      font-size: 12px; }
    .pay-wrap .btn-group .money {
      color: #ff3333; }
    .pay-wrap .btn-group button {
      height: 104rpx;
      width: 222rpx;
      border-radius: 0;
      background: #ff3333;
      color: #FFF; }
