.fmenu {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  height: 108rpx;
  background: #FFF;
  width: 100%;
  position: fixed;
  border-top: 1rpx solid #eaeaea;
  bottom: 0; }
  .fmenu .menu-item {
    flex: 1;
    text-align: center;
    font-size: 30rpx; }
    .fmenu .menu-item .red-point {
      position: absolute;
      top: -5px;
      right: -13px;
      color: #FFF;
