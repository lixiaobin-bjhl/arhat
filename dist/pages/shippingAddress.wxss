.shipping-address .icon-plus {
  width: 28px;
  height: 28px;
  margin-right: 5px;
  background-image: url(http://otzuzbqja.bkt.clouddn.com/plus.svg); }

.shipping-address .item {
  background: #FFF;
  padding: 5px 5px 0 0;
  position: relative;
  border-bottom: 1px solid #eaeaea; }
  .shipping-address .item:first-of-type {
    border-top: 1px solid #eaeaea; }
  .shipping-address .item:before, .shipping-address .item:after {
    content: " ";
    display: table; }
  .shipping-address .item:after {
    clear: both; }
  .shipping-address .item .checkbox {
    position: absolute;
    left: 5px;
    top: 17px; }
  .shipping-address .item .address {
    overflow: hidden;
    padding-left: 40px; }
  .shipping-address .item .detail {
